<div class="section container">
  <div class="row">
    <div class="col s12 m6 offset-m3 z-depth-1">
      <div class="col s12 m10 offset-m1">
        <h5 class="title center">"Login"</h5>
      </div>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'col s12'}) do |f| %>
        <div class="row">
          <div class="input-field col s12">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'validate' %>
            <%= f.label :email, class: 'active' %>
          </div>
        </div>

        <div class="row">
          <div class="input-field col s12">
            <%= f.password_field :password, autocomplete: "off", class: 'validate' %>
            <%= f.label :password, class: 'active' %>
          </div>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="row">
            <div class="col s12">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          </div>
        <% end -%>

        <div class="row center">
          <div class="input-field col s12">
            <button class="btn waves-effect waves-read light-blue darken-1" name="action" type="submit">Login
            </button>
          </div>
        </div>

        <div class="row">
          <div class="input-field col s12">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>


<div class="section container">
  <div class="row">
    <div class="col s12 m6 offset-m3 z-depth-1">
    <div class="col s12 m10 offset-m1">
      <h5 class="title center">"Signup"</h5>
    </div>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'col s12'}) do |f| %>

      <div class="row">
        <div class="input-field col s12">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'validate' %>
          <%= f.label :email, class: 'active' %>
          <em><%= devise_resource.errors.full_messages_for(:email).empty? ? '' : "#{devise_resource.errors.full_messages_for(:email).first}" %></em>
        </div>
      </div>

      <div class="row">
        <div class="input-field col s12">
          <%= f.password_field :password, autocomplete: "off", class: 'validate' %>
          <%= f.label :password, class: 'active' %>
          <em><%= devise_resource.errors.full_messages_for(:password).empty? ? '' : "#{devise_resource.errors.full_messages_for(:password).first}" %></em>
        </div>
      </div>

      <div class="row">
        <div class="input-field col s12">
          <%= f.password_field :password_confirmation, autocomplete: "off", class: 'validate' %>
          <%= f.label :password_confirmation, class: 'active' %>
          <em><%= devise_resource.errors.full_messages_for(:password_confirmation).empty? ? '' : "#{devise_resource.errors.full_messages_for(:password_confirmation).first}" %></em>
        </div>
      </div>

      <div class="row center">
        <div class="col s12">
          <button class="btn waves-effect waves-read light-blue darken-1" name="action" type="submit">Sign Up
          </button>
        </div>
      </div>

      <div class="row">
        <div class="col s12">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    <% end %>
    </div>
  </div>
</div>
